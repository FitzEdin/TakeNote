<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"

        android:orientation="vertical"

        android:background="@color/colorBackground">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginBottom="8dp"

            android:orientation="horizontal">

        <TextView
                android:id="@+id/item_coverage"

                android:layout_width="0dp"
                android:layout_height="match_parent"

                android:layout_weight="1"

                android:ellipsize="end"

                android:fontFamily="@font/lato_bold"
                android:gravity="start"
                android:letterSpacing="0.05"
                android:lines="1"
                android:text="CAYON"

                android:textColor="@color/colorText"
                android:textSize="@dimen/md_text_size" />

        <TextView
                android:id="@+id/item_level"

                android:layout_width="0dp"
                android:layout_height="match_parent"

                android:layout_weight="1"

                android:ellipsize="end"

                android:fontFamily="@font/lato_regular"
                android:gravity="end"
                android:letterSpacing="0.05"
                android:lines="1"
                android:text="Pathfinder"

                android:textColor="@color/colorTextGrey"
                android:textSize="@dimen/md_text_size" />

    </LinearLayout>

    <TextView
            android:id="@+id/item_title"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_gravity="center"

            android:ellipsize="end"
            android:fontFamily="@font/lato_regular"
            android:gravity="start"
            android:lineSpacingExtra="4dp"
            android:letterSpacing="0.05"
            android:lines="3"

            android:paddingBottom="8dp"
            android:text="This is the description of the notice w/2 or 3 lines of text the description of the notice w/2 the description of the notice w/2 or 3 lines."

            android:textColor="@color/colorText"
            android:textSize="@dimen/md_text_size" />

    <TextView
            android:id="@+id/item_open_to"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:ellipsize="end"

            android:fontFamily="@font/lato_regular"
            android:gravity="end"
            android:lineSpacingExtra="4dp"
            android:letterSpacing="0.05"
            android:lines="1"
            android:paddingBottom="8dp"

            android:text="23rd May, 2020"

            android:textColor="@color/colorIcon"
            android:textSize="@dimen/sm_text_size" />
</LinearLayout>
