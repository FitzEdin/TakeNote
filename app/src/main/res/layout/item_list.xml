<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"

        android:orientation="vertical"

        android:background="@color/colorBackground">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginBottom="8dp"

            android:orientation="horizontal">

        <TextView
                android:id="@+id/item_territory"

                android:layout_width="0dp"
                android:layout_height="match_parent"

                android:layout_weight="1"

                android:ellipsize="end"

                android:fontFamily="@font/lato"
                android:gravity="start"
                android:letterSpacing="0.05"
                android:lines="1"
                android:text="@string/dummy_territory"
                android:textStyle="bold"
                android:textAllCaps="true"

                android:textColor="@color/colorText"
                android:textSize="@dimen/md_text_size" />

        <TextView
                android:id="@+id/item_department"

                android:layout_width="0dp"
                android:layout_height="match_parent"

                android:layout_weight="1"

                android:ellipsize="end"

                android:fontFamily="@font/lato_light"
                android:gravity="end"
                android:letterSpacing="0.05"
                android:lines="1"
                android:text="@string/dummy_department"

                android:textColor="@color/colorTextHint"
                android:textSize="@dimen/md_text_size" />

    </LinearLayout>

    <TextView
            android:id="@+id/item_description"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_gravity="center"

            android:ellipsize="end"
            android:fontFamily="@font/lato"
            android:gravity="start"
            android:lineSpacingExtra="4dp"
            android:letterSpacing="0.05"
            android:lines="3"

            android:paddingBottom="8dp"
            android:text="@string/dummy_description"

            android:textColor="@color/colorText"
            android:textSize="@dimen/md_text_size" />

    <TextView
            android:id="@+id/item_date"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:ellipsize="end"

            android:fontFamily="@font/lato"
            android:gravity="end"
            android:lineSpacingExtra="4dp"
            android:letterSpacing="0.05"
            android:lines="1"
            android:paddingBottom="8dp"

            android:text="@string/dummy_date"

            android:textColor="@color/colorTextHighlight"
            android:textSize="@dimen/sm_text_size" />
</LinearLayout>
