<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

              android:layout_width="match_parent"
              android:layout_height="wrap_content"

              android:orientation="vertical"

              android:layout_marginTop="8dp"
              android:layout_marginBottom="8dp"

              android:paddingRight="@dimen/activity_horizontal_margin"
              android:paddingLeft="@dimen/activity_horizontal_margin">

    <TextView
            android:id="@+id/item_title"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginBottom="8dp"

            android:text="Bill Jenkins Scholarship"
            android:textSize="@dimen/md_text_size"
            android:textColor="@color/colorText"
            android:fontFamily="@font/lato_bold"
            android:lineSpacingExtra="8dp"

            android:gravity="center"
            android:layout_gravity="center"

            android:lines="1"
            android:ellipsize="end" />

    <TextView
            android:id="@+id/item_open_to"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginBottom="8dp"

            android:text="@string/dummy_item"
            android:textSize="@dimen/sm_text_size"
            android:textColor="@color/colorText"
            android:fontFamily="@font/lato"
            android:lineSpacingExtra="4dp"

            android:gravity="center"

            android:lines="1"
            android:ellipsize="end" />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginBottom="8dp"

            android:orientation="horizontal">

        <TextView
                android:id="@+id/item_coverage"

                android:layout_width="0dp"
                android:layout_height="match_parent"

                android:layout_weight="1"

                android:text="@string/dummy_item"
                android:textSize="@dimen/sm_text_size"
                android:textColor="@color/colorText"
                android:fontFamily="@font/lato_bold"
                android:lineSpacingExtra="4dp"

                android:lines="1"
                android:ellipsize="end" />

        <TextView
                android:id="@+id/item_location"

                android:layout_width="0dp"
                android:layout_height="match_parent"

                android:layout_weight="2"

                android:text="@string/dummy_item"
                android:textSize="@dimen/sm_text_size"
                android:textColor="@color/colorText"
                android:fontFamily="@font/lato"
                android:lineSpacingExtra="4dp"

                android:lines="1"
                android:ellipsize="end" />

    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginBottom="8dp"

            android:orientation="horizontal">

        <TextView
                android:id="@+id/item_level"

                android:layout_width="0dp"
                android:layout_height="match_parent"

                android:layout_weight="1"

                android:text="@string/dummy_item"
                android:textSize="@dimen/sm_text_size"
                android:textColor="@color/colorText"
                android:fontFamily="@font/lato_bold"
                android:lineSpacingExtra="4dp"

                android:lines="1"
                android:ellipsize="end" />

        <TextView
                android:id="@+id/item_programme"

                android:layout_width="0dp"
                android:layout_height="match_parent"

                android:layout_weight="2"

                android:text="@string/dummy_item"
                android:textSize="@dimen/sm_text_size"
                android:textColor="@color/colorText"
                android:fontFamily="@font/lato"
                android:lineSpacingExtra="4dp"

                android:lines="1"
                android:ellipsize="end" />

    </LinearLayout>
</LinearLayout>
