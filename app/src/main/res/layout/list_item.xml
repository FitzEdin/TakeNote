<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"

        android:orientation="vertical"

        android:background="@color/colorBackground"

        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginBottom="@dimen/activity_vertical_margin">

    <TextView
            android:id="@+id/item_title"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginBottom="8dp"

            android:text="@string/label_title"
            android:textSize="@dimen/dl_text_size"
            android:textColor="@color/colorText"
            android:fontFamily="@font/lato_bold"
            android:lineSpacingExtra="8dp"

            android:gravity="center"
            android:layout_gravity="center"

            android:lines="1"
            android:ellipsize="end" />

    <TextView
            android:id="@+id/item_open_to"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginBottom="8dp"

            android:text="@string/label_open_to"
            android:textSize="@dimen/md_text_size"
            android:textColor="@color/colorIcon"
            android:fontFamily="@font/lato"
            android:lineSpacingExtra="4dp"

            android:gravity="center"

            android:lines="1"
            android:ellipsize="end" />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginBottom="8dp"

            android:orientation="horizontal">

        <TextView
                android:id="@+id/item_coverage"

                android:layout_width="0dp"
                android:layout_height="match_parent"

                android:layout_weight="1"

                android:text="@string/label_coverage"
                android:textSize="@dimen/sm_text_size"
                android:textColor="@color/colorText"
                android:fontFamily="@font/lato_bold"
                android:lineSpacingExtra="4dp"

                android:lines="1"
                android:ellipsize="end" />

        <TextView
                android:id="@+id/item_location"

                android:layout_width="0dp"
                android:layout_height="match_parent"

                android:layout_weight="2"

                android:text="@string/label_location"
                android:textSize="@dimen/sm_text_size"
                android:textColor="@color/colorText"
                android:fontFamily="@font/lato"
                android:lineSpacingExtra="4dp"

                android:lines="1"
                android:ellipsize="end" />

    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal">

        <TextView
                android:id="@+id/item_level"

                android:layout_width="0dp"
                android:layout_height="match_parent"

                android:layout_weight="1"

                android:text="@string/label_level"
                android:textSize="@dimen/sm_text_size"
                android:textColor="@color/colorText"
                android:fontFamily="@font/lato_bold"
                android:lineSpacingExtra="4dp"

                android:lines="1"
                android:ellipsize="end" />

        <TextView
                android:id="@+id/item_programme"

                android:layout_width="0dp"
                android:layout_height="match_parent"

                android:layout_weight="2"

                android:text="@string/label_programme"
                android:textSize="@dimen/sm_text_size"
                android:textColor="@color/colorText"
                android:fontFamily="@font/lato"
                android:lineSpacingExtra="4dp"

                android:lines="1"
                android:ellipsize="end" />

    </LinearLayout>

    <View
            android:layout_width="128dp"
            android:layout_height="@dimen/divider_height"
            android:background="@color/colorPrimary"

            android:layout_marginTop="16dp"

            app:layout_constraintBottom_toBottomOf="parent"

            android:layout_gravity="bottom|center"/>
</LinearLayout>
