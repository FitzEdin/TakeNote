<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".ItemDetailsFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:background="@color/colorBackground">

        <!-- Large Text w/Icons on Right -->
        <LinearLayout
                android:id="@+id/top_bar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/top_bar_height"

                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"

                app:layout_constraintTop_toTopOf="parent"

                android:orientation="horizontal">

            <ImageView
                    android:id="@+id/back_item_details"
                    android:layout_width="48dp"
                    android:layout_height="48dp"

                    android:paddingLeft="0dp"
                    android:paddingRight="0dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"

                    android:layout_marginStart="-16dp"

                    android:layout_gravity="center"

                    android:src="@drawable/ic_arrow_back_black_24dp"
                    android:tint="@color/colorIcon"/>

            <TextView
                    android:id="@+id/top_bar_title"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"

                    android:layout_weight="3"

                    android:text="@string/title_item_details"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/lg_text_size"
                    android:textStyle="bold"
                    android:fontFamily="@font/lato"
                    android:letterSpacing="0.03"

                    android:gravity="start|center"

                    android:lines="1" />

            <ImageView
                    android:id="@+id/share_item_details"
                    android:layout_width="48dp"
                    android:layout_height="48dp"

                    android:paddingLeft="0dp"
                    android:paddingRight="0dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"

                    android:layout_marginEnd="-16dp"

                    android:layout_gravity="center"

                    android:src="@drawable/ic_share_black_24dp"
                    android:tint="@color/colorIcon"/>

        </LinearLayout>

        <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_height"
                android:background="@color/colorOutline"

                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"

                app:layout_constraintTop_toBottomOf="@id/top_bar"

                android:layout_gravity="top"/>

        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                app:layout_constraintTop_toBottomOf="@id/top_bar" >

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:orientation="vertical"

                    android:paddingTop="8dp"

                    android:paddingStart="@dimen/activity_horizontal_margin"
                    android:paddingEnd="@dimen/activity_horizontal_margin">

                <TextView
                        android:id="@+id/item_details_title"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_marginBottom="@dimen/line_vertical_margin"

                        android:text="@string/dummy_title"
                        android:textSize="@dimen/md_text_size"
                        android:textColor="@color/colorText"
                        android:fontFamily="@font/lato_bold"
                        android:textStyle="bold"
                        android:letterSpacing="0.05"
                        android:lineSpacingExtra="2dp"

                        android:gravity="center" />

                <TextView
                        android:id="@+id/item_details_open_to"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_marginBottom="@dimen/line_vertical_margin"

                        android:text="@string/dummy_title"
                        android:textSize="@dimen/md_text_size"
                        android:textColor="@color/colorText"
                        android:fontFamily="@font/lato"
                        android:letterSpacing="0.05"
                        android:lineSpacingExtra="4dp"

                        android:gravity="center" />

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:orientation="horizontal">

                    <TextView
                            android:id="@+id/item_details_level"

                            android:layout_width="0dp"
                            android:layout_height="match_parent"

                            android:layout_weight="1"

                            android:text="@string/dummy_title"
                            android:textSize="@dimen/sm_text_size"
                            android:textColor="@color/colorText"
                            android:fontFamily="@font/lato_bold"
                            android:lineSpacingExtra="4dp"

                            android:gravity="center" />

                    <TextView
                            android:id="@+id/item_details_coverage"

                            android:layout_width="0dp"
                            android:layout_height="match_parent"

                            android:layout_weight="1"

                            android:text="@string/dummy_title"
                            android:textSize="@dimen/sm_text_size"
                            android:textColor="@color/colorText"
                            android:fontFamily="@font/lato_bold"
                            android:lineSpacingExtra="4dp"

                            android:gravity="center" />

                </LinearLayout>

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_marginTop="@dimen/line_vertical_margin"
                        android:layout_marginBottom="8dp"

                        android:text="Location"
                        android:textSize="@dimen/sm_text_size"
                        android:textColor="@color/colorText"
                        android:fontFamily="@font/lato_bold"
                        android:lineSpacingExtra="8dp" />

                <TextView
                        android:id="@+id/item_details_location"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_marginBottom="@dimen/line_vertical_margin"

                        android:text="@string/dummy_item"
                        android:textSize="@dimen/md_text_size"
                        android:textColor="@color/colorText"
                        android:fontFamily="@font/lato"
                        android:lineSpacingExtra="4dp" />

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_marginBottom="8dp"

                        android:text="Eligible Study Areas"
                        android:textSize="@dimen/sm_text_size"
                        android:textColor="@color/colorText"
                        android:fontFamily="@font/lato_bold"
                        android:lineSpacingExtra="8dp" />

                <TextView
                        android:id="@+id/item_details_programme"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_marginBottom="@dimen/line_vertical_margin"

                        android:text="@string/dummy_item"
                        android:textSize="@dimen/md_text_size"
                        android:textColor="@color/colorText"
                        android:fontFamily="@font/lato"
                        android:lineSpacingExtra="4dp" />

                <TextView
                        android:id="@+id/item_details_link"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:padding="@dimen/line_vertical_margin"

                        android:text="@string/view_website"
                        android:textSize="@dimen/md_text_size"
                        android:textColor="@color/colorIcon"
                        android:fontFamily="@font/lato_bold"
                        android:letterSpacing="0.03"
                        android:lineSpacingExtra="4dp"

                        android:layout_gravity="center" />
            </LinearLayout>

        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>