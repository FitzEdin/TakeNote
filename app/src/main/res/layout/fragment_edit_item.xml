
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".items.AddItemFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/frag_edit_item"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"

            android:background="@color/colorBackground">

        <!-- Large Text w/Icons on Right -->
        <LinearLayout
                android:id="@+id/top_bar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/top_bar_height"

                app:layout_constraintTop_toTopOf="parent"

                android:orientation="horizontal">

            <ImageView
                    android:id="@+id/close_item_edit"
                    android:layout_width="48dp"
                    android:layout_height="48dp"

                    android:paddingLeft="0dp"
                    android:paddingRight="0dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"

                    android:layout_marginLeft="-16dp"

                    android:layout_gravity="center"

                    android:src="@drawable/ic_close_black_24dp"
                    android:tint="@color/colorError"/>

            <TextView
                    android:id="@+id/top_bar_title"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"

                    android:layout_weight="3"

                    android:text="@string/title_edit_item"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/lg_text_size"
                    android:textStyle="bold"
                    android:fontFamily="@font/lato"
                    android:letterSpacing="0.03"

                    android:gravity="start|center"

                    android:lines="1" />

            <TextView
                    android:id="@+id/save_item_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"

                    android:gravity="center"
                    android:layout_gravity="end"

                    android:text="@string/save_item"
                    android:textSize="@dimen/sm_text_size"
                    android:textColor="@color/colorPrimary"
                    android:fontFamily="@font/lato_bold"
                    android:letterSpacing="0.1" />

            <ImageView
                    android:id="@+id/delete_item_btn"
                    android:layout_width="@dimen/touch_item_size"
                    android:layout_height="@dimen/touch_item_size"

                    android:paddingLeft="0dp"
                    android:paddingRight="0dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"

                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="-16dp"

                    android:layout_gravity="end"

                    android:src="@drawable/ic_delete_black_24dp"
                    android:tint="@color/colorError"/>

        </LinearLayout>

        <!-- Divider -->
        <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_height"
                android:background="@color/colorOutline"

                app:layout_constraintTop_toBottomOf="@id/top_bar"

                android:layout_gravity="top"/>

        <!-- Form Items -->
        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:layout_marginTop="@dimen/top_bar_height"
                android:scrollbars="none"

                app:layout_constraintTop_toBottomOf="@id/top_bar">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:paddingTop="@dimen/activity_horizontal_margin"
                    android:paddingBottom="@dimen/activity_horizontal_margin"

                    android:orientation="vertical">

                <!-- Description -->
                <TextView
                        android:id="@+id/edit_item_open_to_label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_gravity="start|center"

                        android:layout_marginTop="@dimen/activity_vertical_margin"
                        android:layout_marginBottom="@dimen/activity_vertical_margin"

                        android:text="@string/label_open_to"
                        android:textSize="@dimen/dl_text_size"
                        android:textColor="@color/colorText"
                        android:fontFamily="@font/lato_bold"
                        android:letterSpacing="0.05"/>

                <EditText
                        android:id="@+id/edit_item_open_to"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:background="@drawable/outline"

                        android:gravity="start"

                        android:hint="@string/hint_open_to"
                        android:textColorHint="@color/colorHint"
                        android:textColor="@color/colorText"
                        android:textSize="@dimen/dl_text_size"
                        android:fontFamily="@font/lato"
                        android:letterSpacing="0.03"
                        android:lineSpacingExtra="4dp"

                        android:lines="3"
                        android:singleLine="false"

                        android:padding="@dimen/sm_margin"
                        android:layout_marginBottom="@dimen/activity_vertical_margin"

                        android:imeOptions="actionNext"
                        android:hapticFeedbackEnabled="true"/>

                <View
                        android:layout_width="128dp"
                        android:layout_height="@dimen/divider_height"
                        android:background="@color/colorPrimary"

                        android:layout_marginTop="@dimen/activity_vertical_margin"
                        android:layout_marginBottom="@dimen/activity_vertical_margin"

                        android:layout_gravity="bottom|center"/>

                <!-- Territory Notice applies to -->
                <TextView
                        android:id="@+id/edit_item_title_label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_gravity="start|center"

                        android:layout_marginBottom="@dimen/activity_vertical_margin"

                        android:text="@string/label_title"
                        android:textSize="@dimen/dl_text_size"
                        android:textColor="@color/colorText"
                        android:fontFamily="@font/lato_bold"
                        android:letterSpacing="0.05"/>

                <EditText
                        android:id="@+id/edit_item_title"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:background="@drawable/outline"

                        android:gravity="start|center_vertical"

                        android:hint="@string/hint_title"
                        android:textColorHint="@color/colorHint"
                        android:textColor="@color/colorText"
                        android:textSize="@dimen/md_text_size"
                        android:fontFamily="@font/lato"
                        android:letterSpacing="0.03"
                        android:lineSpacingExtra="4dp"

                        android:lines="1"
                        android:singleLine="true"
                        android:inputType="text"

                        android:padding="@dimen/sm_margin"
                        android:layout_marginBottom="@dimen/activity_vertical_margin"

                        android:imeOptions="actionNext"
                        android:hapticFeedbackEnabled="true"/>


                <!-- Department notice applies to -->
                <TextView
                        android:id="@+id/edit_item_link_label"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_gravity="start|center"

                        android:layout_marginTop="@dimen/activity_vertical_margin"
                        android:layout_marginBottom="@dimen/activity_vertical_margin"

                        android:text="@string/label_link"
                        android:textSize="@dimen/dl_text_size"
                        android:textColor="@color/colorText"
                        android:fontFamily="@font/lato_bold"
                        android:letterSpacing="0.05"/>

                <EditText
                        android:id="@+id/edit_item_link"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:background="@drawable/outline"

                        android:gravity="start|center_vertical"

                        android:hint="@string/hint_link"
                        android:textColorHint="@color/colorHint"
                        android:textColor="@color/colorText"
                        android:textSize="@dimen/md_text_size"
                        android:fontFamily="@font/lato"
                        android:letterSpacing="0.03"
                        android:lineSpacingExtra="4dp"

                        android:lines="1"
                        android:singleLine="true"
                        android:inputType="text"

                        android:padding="@dimen/sm_margin"
                        android:layout_marginBottom="@dimen/activity_vertical_margin"

                        android:imeOptions="actionNext"
                        android:hapticFeedbackEnabled="true"/>

                <View
                        android:layout_width="128dp"
                        android:layout_height="@dimen/divider_height"
                        android:background="@color/colorPrimary"

                        android:layout_marginTop="@dimen/activity_vertical_margin"
                        android:layout_marginBottom="@dimen/activity_vertical_margin"

                        android:layout_gravity="bottom|center"/>




                <!-- ABOUT PROGRAMME -->

                <!-- Date Relevant to Notice -->
                <TextView
                        android:id="@+id/edit_item_location_label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_gravity="start|center"

                        android:layout_marginTop="@dimen/activity_vertical_margin"
                        android:layout_marginBottom="@dimen/activity_vertical_margin"

                        android:text="@string/label_location"
                        android:textSize="@dimen/dl_text_size"
                        android:textColor="@color/colorText"
                        android:fontFamily="@font/lato_bold"
                        android:letterSpacing="0.05"/>

                <EditText
                        android:id="@+id/edit_item_location"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:background="@drawable/outline"

                        android:gravity="start|center_vertical"

                        android:hint="@string/hint_location"
                        android:textColorHint="@color/colorHint"
                        android:textColor="@color/colorText"
                        android:textSize="@dimen/md_text_size"
                        android:fontFamily="@font/lato"
                        android:letterSpacing="0.03"
                        android:lineSpacingExtra="4dp"

                        android:lines="1"
                        android:singleLine="true"
                        android:inputType="text"

                        android:padding="@dimen/sm_margin"
                        android:layout_marginBottom="@dimen/activity_vertical_margin"

                        android:imeOptions="actionNext"
                        android:hapticFeedbackEnabled="true"/>


                <!-- Location of Event -->
                <TextView
                        android:id="@+id/edit_item_programme_label"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_gravity="start|center"

                        android:layout_marginTop="@dimen/activity_vertical_margin"
                        android:layout_marginBottom="@dimen/activity_vertical_margin"

                        android:text="@string/label_programme"
                        android:textSize="@dimen/dl_text_size"
                        android:textColor="@color/colorText"
                        android:fontFamily="@font/lato_bold"
                        android:letterSpacing="0.05"/>

                <EditText
                        android:id="@+id/edit_item_programme"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:background="@drawable/outline"

                        android:gravity="start|center_vertical"

                        android:hint="@string/hint_programme"
                        android:textColorHint="@color/colorHint"
                        android:textColor="@color/colorText"
                        android:textSize="@dimen/md_text_size"
                        android:fontFamily="@font/lato"
                        android:letterSpacing="0.03"
                        android:lineSpacingExtra="4dp"

                        android:lines="1"
                        android:singleLine="true"
                        android:inputType="date"

                        android:padding="@dimen/sm_margin"
                        android:layout_marginBottom="@dimen/activity_vertical_margin"

                        android:imeOptions="actionNext"
                        android:hapticFeedbackEnabled="true"/>

                <View
                        android:layout_width="128dp"
                        android:layout_height="@dimen/divider_height"
                        android:background="@color/colorPrimary"

                        android:layout_marginTop="@dimen/activity_vertical_margin"
                        android:layout_marginBottom="@dimen/activity_vertical_margin"

                        android:layout_gravity="bottom|center"/>




                <!-- STUDENT ELIGIBILITY -->




                <!-- VETTING STATUS -->

                <!-- Whether the item was vetted -->
                <TextView
                        android:id="@+id/edit_item_vetted_label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_gravity="start|center"

                        android:layout_marginTop="@dimen/activity_vertical_margin"
                        android:layout_marginBottom="@dimen/activity_vertical_margin"

                        android:text="@string/label_vetted"
                        android:textSize="@dimen/dl_text_size"
                        android:textColor="@color/colorText"
                        android:fontFamily="@font/lato_bold"
                        android:letterSpacing="0.05"/>

                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:orientation="horizontal">

                    <TextView
                            android:id="@+id/edit_item_vetted_hint"

                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/touch_item_md"

                            android:layout_gravity="start|center_vertical"
                            android:gravity="center"

                            android:layout_alignParentLeft="true"

                            android:text="@string/hint_vetted"
                            android:textSize="@dimen/md_text_size"
                            android:textColor="@color/colorText"
                            android:fontFamily="@font/lato_regular"
                            android:letterSpacing="0.05"/>

                    <Switch
                            android:id="@+id/edit_item_status"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/touch_item_md"

                            android:layout_alignParentRight="true"
                            android:layout_gravity="start|center" />

                </RelativeLayout>


                <View
                        android:layout_width="128dp"
                        android:layout_height="@dimen/divider_height"
                        android:background="@color/colorPrimary"

                        android:layout_marginTop="@dimen/activity_vertical_margin"
                        android:layout_marginBottom="@dimen/activity_vertical_margin"

                        android:layout_gravity="bottom|center"/>

            </LinearLayout>
        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>