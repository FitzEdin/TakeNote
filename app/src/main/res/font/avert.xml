<?xml version="1.0" encoding="utf-8"?>
<font-family xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- regular -->
    <font
            android:font="@font/avert_regular"
            android:fontStyle="normal"
            android:fontWeight="400"

            app:font="@font/avert_regular"
            app:fontStyle="normal"
            app:fontWeight="400" />

    <!-- bold -->
    <font
            android:font="@font/avert_bold"
            android:fontStyle="normal"
            android:fontWeight="700"

            app:font="@font/avert_bold"
            app:fontStyle="normal"
            app:fontWeight="700" />

    <!-- light -->
    <font
            android:font="@font/avert_light"
            android:fontStyle="normal"
            android:fontWeight="100"

            app:font="@font/avert_light"
            app:fontStyle="normal"
            app:fontWeight="100" />

</font-family>